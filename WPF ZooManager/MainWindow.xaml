        <Button Content="Add Zoo" HorizontalAlignment="Left" Margin="10,355,0,0" VerticalAlignment="Top" FontSize="16" Width="184" Height="31"/>
        <Button Content="Update Zoo" HorizontalAlignment="Left" Margin="10,391,0,0" VerticalAlignment="Top" FontSize="16" Width="184" Height="31"/>
        <Button Content="Add Animal" HorizontalAlignment="Left" Margin="212,355,0,0" VerticalAlignment="Top" FontSize="16" Width="184" Height="31"/>
        <Button Content="Remove Animal" HorizontalAlignment="Left" Margin="212,281,0,0" VerticalAlignment="Top" FontSize="16" Width="184" Height="31"/>
        <Button Content="Update Animal" HorizontalAlignment="Left" Margin="212,391,0,0" VerticalAlignment="Top" FontSize="16" Width="184" Height="31"/>
        <Button Content="Delete Animal" HorizontalAlignment="Left" Margin="427,391,0,0" VerticalAlignment="Top" FontSize="16" Width="184" Height="31"/>
        <TextBox Name="zooTb" HorizontalAlignment="Left" Margin="10,317,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="386" Height="33" FontSize="16"/>


    </Grid>
</Window>
